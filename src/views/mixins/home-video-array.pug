mixin video(videoInfo)
        a(href=`/videos/${videoInfo.id}`).video-mixin
            div.video-mixin__thumb(style=`background-image:url(/${videoInfo.thumbUrl});background-size:cover;background-position:center;`)
            div.video-mixin__data
                span.video-mixin__title=videoInfo.title
                div.video-mixin__meta
                    p #{videoInfo.owner.username}
                    span #{videoInfo.createdAt}